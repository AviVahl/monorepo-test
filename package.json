{
  "name": "sample-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha \"packages/*/dist/test/**/*.spec.js\" --enable-source-maps",
    "start": "yarn start:client",
    "start:client": "yarn workspace @sample/app start",
    "start:server": "yarn workspace @sample/server start",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/node": "12",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^1.3.1",
    "mocha": "^8.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.1.2",
    "ts-loader": "^8.0.11",
    "typescript": "~4.1.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "license": "MIT",
  "private": true
}
